---
import MainLayout from '../layouts/MainLayout.astro';
import SectionDivider from '../components/SectionDivider.astro';
import Card from '../components/Card.astro';
import FeatureCard from '../components/FeatureCard.astro';

// In a real implementation, this data would come from a database or API
// For this example, we're hardcoding some sample data
const inPersonCommunities = [
  {
    name: "757Makerspace Norfolk",
    url: "https://757makerspace.com",
    description: "A community workshop and prototyping center"
  },
  {
    name: "757 Makerspace Hampton",
    url: "https://757makerspace.com/hampton",
    description: "A community workshop and prototyping center in Hampton"
  }
];

const onlineCommunities = [
  {
    name: "757dev - Slack",
    url: "https://757dev.org",
    description: "A Slack community for developers in the 757 area"
  },
  {
    name: "757dev - Discord",
    url: "https://discord.gg/757dev",
    description: "A Discord community for developers in the 757 area"
  }
];
---

<MainLayout title="Communities">
  <div class="hero">
    <div class="container">
      <h1>Communities</h1>
      <p>Connect with tech communities in the Hampton Roads area, both in-person and online.</p>
    </div>
  </div>

  <div class="container">
    <section class="section">
      <SectionDivider title="Online" />
      <div class="grid">
        {onlineCommunities.map(community => (
          <Card title={community.name} href={community.url}>
            <p>{community.description}</p>
          </Card>
        ))}
      </div>
    </section>

    <section class="section">
      <SectionDivider title="In-person" />
      <div class="grid">
        {inPersonCommunities.map(community => (
          <Card title={community.name} href={community.url}>
            <p>{community.description}</p>
          </Card>
        ))}
      </div>
    </section>

    <section class="section">
      <SectionDivider title="🏄🏽‍♀️ Keep surfing" />
      <div class="grid-3">
        <FeatureCard 
          title="Home" 
          href="/" 
          image="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb" 
        />
        <FeatureCard 
          title="Meetups" 
          href="/meetups" 
          image="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb" 
        />
        <FeatureCard 
          title="Calendar" 
          href="/calendar" 
          image="https://images.unsplash.com/photo-1506784983877-45594efa4cbe?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb" 
        />
        <FeatureCard 
          title="Learning" 
          href="/learning" 
          image="https://images.unsplash.com/photo-1523050854058-8df90110c9f1?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb" 
        />
        <FeatureCard 
          title="Work" 
          href="/work" 
          image="https://images.unsplash.com/photo-1542744173-8e7e53415bb0?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb" 
        />
      </div>
    </section>
  </div>
</MainLayout> 