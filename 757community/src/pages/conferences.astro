---
import MainLayout from '../layouts/MainLayout.astro';
import SectionDivider from '../components/SectionDivider.astro';
import Card from '../components/Card.astro';
import FeatureCard from '../components/FeatureCard.astro';

// In a real implementation, this data would come from a database or API
// For this example, we're hardcoding some sample data
const pastConferences = [
  {
    name: "RevolutionConf",
    url: "https://revolutionconf.com/",
    description: "A two-day, multi-track technology conference in Virginia Beach",
    date: "June 2023"
  },
  {
    name: "Hampton Roads DevFest",
    url: "https://devfest.gdghr.org/",
    description: "A community-run developer conference focused on Google technologies",
    date: "October 2023"
  },
  {
    name: "Tidal",
    url: "https://tidalconf.com/",
    description: "A conference focused on design and technology in Hampton Roads",
    date: "September 2023"
  }
];
---

<MainLayout title="Conferences">
  <div class="hero">
    <div class="container">
      <h1>Conferences</h1>
      <p>Discover tech conferences in the Hampton Roads area to expand your knowledge and network.</p>
    </div>
  </div>

  <div class="container">
    <section class="section">
      <SectionDivider title="Upcoming Conferences" />
      <div class="content-box">
        <p class="none-scheduled">None currently scheduled</p>
        <p>
          Check back later for information about upcoming conferences in the Hampton Roads area.
          Want to be the first to know? Join our <a href="https://757dev.org">community Slack</a>.
        </p>
      </div>
    </section>

    <section class="section">
      <SectionDivider title="Past Conferences" />
      <div class="grid">
        {pastConferences.map(conference => (
          <Card title={conference.name} href={conference.url}>
            <p class="date">{conference.date}</p>
            <p>{conference.description}</p>
          </Card>
        ))}
      </div>
    </section>

    <section class="section">
      <SectionDivider title="Want to organize a conference?" />
      <div class="content-box">
        <p>
          Interested in organizing a tech conference in Hampton Roads? The community is here to support you! 
          Reach out to <a href="https://revolutionva.org">RevolutionVA</a> for guidance and resources.
        </p>
        <a href="/get-involved" class="cta-button">Get involved</a>
      </div>
    </section>

    <section class="section">
      <SectionDivider title="🏄🏽‍♀️ Keep surfing" />
      <div class="grid-3">
        <FeatureCard 
          title="Home" 
          href="/" 
          image="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb" 
        />
        <FeatureCard 
          title="Meetups" 
          href="/meetups" 
          image="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb" 
        />
        <FeatureCard 
          title="Learning" 
          href="/learning" 
          image="https://images.unsplash.com/photo-1523050854058-8df90110c9f1?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb" 
        />
        <FeatureCard 
          title="Communities" 
          href="/communities" 
          image="/pexels-karolina-grabowska-4476606.jpg" 
        />
        <FeatureCard 
          title="Hackathons" 
          href="/hackathons" 
          image="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb" 
        />
        <FeatureCard 
          title="Work" 
          href="/work" 
          image="https://images.unsplash.com/photo-1542744173-8e7e53415bb0?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb" 
        />
      </div>
    </section>
  </div>
</MainLayout>

<style>
  .date {
    color: #0077cc;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .content-box {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    text-align: center;
  }

  .none-scheduled {
    font-size: 1.25rem;
    font-weight: bold;
    color: #6c757d;
    margin-bottom: 1rem;
  }

  .cta-button {
    display: inline-block;
    background-color: #0077cc;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-weight: bold;
    text-decoration: none;
    transition: background-color 0.2s ease;
    margin-top: 1rem;
  }

  .cta-button:hover {
    background-color: #005fa3;
    text-decoration: none;
  }
</style> 