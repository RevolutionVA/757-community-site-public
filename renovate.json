{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "prHourlyLimit": 4,
  "prConcurrentLimit": 5,
  "schedule": ["every weekend"],
  "timezone": "America/New_York"
} 