---
import MainLayout from '../layouts/MainLayout.astro';
import SectionDivider from '../components/SectionDivider.astro';
import Card from '../components/Card.astro';
import FeatureCard from '../components/FeatureCard.astro';
import KeepSurfing from '../components/KeepSurfing.astro';

// In a real implementation, this data would come from a database or API
// For this example, we're hardcoding some sample data
const companies = [
  {
    name: "Marathon Consulting",
    location: "Virginia Beach",
    description: "IT consulting firm specializing in custom software development",
    url: "https://www.marathonus.com/"
  },
  {
    name: "Dominion Enterprises",
    location: "Norfolk",
    description: "Media and information services company",
    url: "https://www.dominionenterprises.com/"
  },
  {
    name: "STIHL Inc.",
    location: "Virginia Beach",
    description: "Manufacturer of outdoor power equipment",
    url: "https://www.stihlusa.com/"
  },
  {
    name: "LifeNet Health",
    location: "Virginia Beach",
    description: "Non-profit global leader in regenerative medicine",
    url: "https://www.lifenethealth.org/"
  },
  {
    name: "Issuetrak",
    location: "Virginia Beach",
    description: "Software company providing issue tracking and process management solutions",
    url: "https://www.issuetrak.com/"
  },
  {
    name: "Yellow Dog Software",
    location: "Norfolk",
    description: "Provider of inventory management systems for hospitality, sports, and retail markets",
    url: "https://www.yellowdogsoftware.com/"
  },
  {
    name: "Techark",
    location: "Norfolk",
    description: "Digital innovation company offering web development, software, and mobile app solutions",
    url: "https://gotechark.com/"
  },
  {
    name: "Decisions",
    location: "Virginia Beach",
    description: "No-code, rules-driven platform for business process automation",
    url: "https://decisions.com/"
  },
  {
    name: "MAXX Potential",
    location: "Norfolk & Richmond",
    description: "IT apprenticeship and staffing company providing tech talent solutions",
    url: "https://maxxpotential.com/"
  }
];

// Sort companies alphabetically by name
const sortedCompanies = [...companies].sort((a, b) => a.name.localeCompare(b.name));
---

<MainLayout 
  title="Work" 
  description="Find tech jobs and career opportunities in Hampton Roads, Virginia. Explore companies hiring developers, designers, and IT professionals in Virginia Beach, Norfolk, Chesapeake, and surrounding areas."
>
  <div class="hero">
    <div class="container">
      <h1>Work</h1>
      <p>Discover tech job opportunities and companies in the Hampton Roads area.</p>
    </div>
  </div>

  <div class="container">
    <section class="section">
      <SectionDivider title="Notable Tech Companies" />
      <div class="grid">
        {sortedCompanies.map(company => (
          <Card title={company.name} href={company.url}>
            <p class="location">{company.location}</p>
            <p>{company.description}</p>
          </Card>
        ))}
      </div>
    </section>

    <KeepSurfing />
  </div>
</MainLayout>

<style>
  .location {
    color: #0077cc;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .content-box {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 2rem;
  }

  .content-box h3 {
    color: #0077cc;
    margin-top: 0;
  }
</style> 